<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DevTools</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DevTools.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />

    <style>
        /* Mobile Block Overlay */
        .mobile-block-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: linear-gradient(135deg, var(--bg-primary, #11121a) 0%, var(--bg-secondary, #13141c) 100%);
            z-index: 10000;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 20px;
        }

        .mobile-block-content {
            max-width: 400px;
            background: var(--bg-card, #1a1b26);
            padding: 40px 30px;
            border-radius: 20px;
            border: 1px solid var(--border-color, #2a2b3a);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }

        .mobile-block-icon {
            font-size: 4rem;
            color: var(--accent-primary, #7c3aed);
            margin-bottom: 20px;
            animation: pulse 2s infinite;
        }

        .mobile-block-title {
            background: linear-gradient(120deg, var(--accent-primary, #7c3aed), var(--accent-secondary, #06ffa5));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 15px;
            line-height: 1.2;
        }

        .mobile-block-message {
            color: var(--text-secondary, #a1a1aa);
            font-size: 1rem;
            line-height: 1.6;
            margin-bottom: 25px;
        }

        .mobile-block-features {
            list-style: none;
            padding: 0;
            margin: 20px 0;
            text-align: left;
        }

            .mobile-block-features li {
                color: var(--text-secondary, #a1a1aa);
                margin: 12px 0;
                display: flex;
                align-items: center;
                font-size: 0.9rem;
            }

                .mobile-block-features li i {
                    color: var(--accent-secondary, #06ffa5);
                    margin-right: 12px;
                    width: 20px;
                    flex-shrink: 0;
                }

        .desktop-hint {
            margin-top: 20px;
            padding: 15px;
            background: rgba(124, 58, 237, 0.1);
            border: 1px solid var(--accent-primary, #7c3aed);
            border-radius: 8px;
            font-size: 0.85rem;
            color: var(--accent-primary, #7c3aed);
        }

        @@keyframes pulse {
            0%, 100%

        {
            transform: scale(1);
            opacity: 1;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }

        }

        /* Hide main content on mobile */
        @@media (max-width: 768px) {
            .mobile-block-overlay

        {
            display: flex !important;
        }

        body > header,
        body > .container,
        body > main {
            display: none !important;
        }

        }

        @@media (max-width: 480px) {
            .mobile-block-content

        {
            padding: 30px 20px;
            margin: 0 10px;
        }

        .mobile-block-title {
            font-size: 1.5rem;
        }

        .mobile-block-icon {
            font-size: 3rem;
        }

        }
    </style>
</head>
<body>
    <!-- Mobile Block Overlay -->
    <div class="mobile-block-overlay">
        <div class="mobile-block-content">
            <div class="mobile-block-icon">
                <i class="bi bi-display"></i>
            </div>
            <h1 class="mobile-block-title">Desktop Experience Required</h1>
            <p class="mobile-block-message">
                Please access our DevTools suite on a desktop or laptop computer for the best experience.
            </p>

            <ul class="mobile-block-features">
                <li>
                    <i class="bi bi-tools"></i>
                    Professional development tools
                </li>
                <li>
                    <i class="bi bi-code-slash"></i>
                    Advanced code formatting
                </li>
                <li>
                    <i class="bi bi-table"></i>
                    Complex data manipulation
                </li>
                <li>
                    <i class="bi bi-lightning-charge"></i>
                    High-performance processing
                </li>
                <li>
                    <i class="bi bi-shield-check"></i>
                    Secure local operations
                </li>
            </ul>

            <div class="desktop-hint">
                <i class="bi bi-info-circle"></i>
                Our tools are optimized for desktop browsers with larger screens and full keyboard support.
            </div>
        </div>
    </div>

    <!-- Desktop Content -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-braces"></i> DevTools
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
                        <!-- Conversion Tools -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-semibold" href="#" id="conversionDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Conversion Tools
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="conversionDropdown">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="XmlTo" asp-action="Index">
                                        <i class="bi bi-filetype-xml"></i> XML Converter
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="CsvTo" asp-action="Index">
                                        <i class="bi bi-filetype-csv me-2"></i> CSV Converter
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="JsonTo" asp-action="Index">
                                        <i class="bi bi-filetype-json me-2"></i> JSON Converter
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="YamlTo" asp-action="Index">
                                        <i class="bi bi-filetype-yml"></i> YAML Tools
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Encoding & Security Tools -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-semibold" href="#" id="securityDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Encoding & Security Tools
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="securityDropdown">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="Base64Converter" asp-action="Index">
                                        <i class="bi bi-code-slash me-2"></i> Base64 Converter
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="HashGenerator" asp-action="Index">
                                        <i class="bi bi-shield-lock me-2"></i> Hash Generator
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="PasswordGenerator" asp-action="Index">
                                        <i class="bi bi-key me-2"></i> Password Generator
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="UUIDGenerator" asp-action="Index">
                                        <i class="bi bi-fingerprint me-2"></i> UUID Generator
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="QRCodeTools" asp-action="Index">
                                        <i class="bi bi-qr-code"></i> QR Code Generator & Scanner
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Development Tools -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-semibold" href="#" id="developmentDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Development Tools
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="developmentDropdown">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="GitIgnoreGenerator" asp-action="Index">
                                        <i class="bi bi-git"></i> .gitignore Generator
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="MarkdownPreviewer" asp-action="Index">
                                        <i class="bi bi-filetype-md"></i> Markdown Previewer
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="SmtpTester" asp-action="Index">
                                        <i class="bi bi-envelope-at-fill"></i> SMTP Tester
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- UI Tools -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-semibold" href="#" id="uiDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                UI Tools
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="uiDropdown">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="ColorPaletteGenerator" asp-action="Index">
                                        <i class="bi bi-palette-fill"></i> Color Palette Generator
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="ColorConverter" asp-action="Index">
                                        <i class="bi bi-eyedropper"></i> Color Converter
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Text Tools -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-semibold" href="#" id="textDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Text Tools
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="textDropdown">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="DiffChecker" asp-action="Index">
                                        <i class="bi bi-check2-square"></i> Diff Checker
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="LoremIpsumGenerator" asp-action="Index">
                                        <i class="bi bi-body-text"></i> Lorem Ipsum Generator
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="CaseConverter" asp-action="Index">
                                        <i class="bi bi-alphabet"></i> Case Converter
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="WordCounter" asp-action="Index">
                                        <i class="bi bi-0-square-fill"></i> Word Counter
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="DuplicateLineRemover" asp-action="Index">
                                        <i class="bi bi-eraser-fill"></i> Duplicate Line Remover
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Mobile Detection Script -->
    <script>
        // Additional mobile detection for more precise control
        function isMobileDevice() {
            return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)
                || window.innerWidth <= 768
                || (window.orientation !== undefined);
        }

        // Show/hide mobile block based on device and screen size
        function checkDevice() {
            const mobileBlock = document.querySelector('.mobile-block-overlay');
            const mainContent = document.querySelectorAll('body > header, body > .container, body > main');

            if (isMobileDevice()) {
                if (mobileBlock) {
                    mobileBlock.style.display = 'flex';
                }
                mainContent.forEach(element => {
                    if (element) element.style.display = 'none';
                });
            } else {
                if (mobileBlock) {
                    mobileBlock.style.display = 'none';
                }
                mainContent.forEach(element => {
                    if (element) element.style.display = '';
                });
            }
        }

        // Check on load and resize
        document.addEventListener('DOMContentLoaded', checkDevice);
        window.addEventListener('resize', checkDevice);
        window.addEventListener('orientationchange', function() {
            setTimeout(checkDevice, 100);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>